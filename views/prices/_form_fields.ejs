<form action="/prices/<%= price.id %>" method="POST">
  <div class="form-group">
    <input
      required
      value="<%= price.id %>"
      type="hidden"
      class="form-control"
      name="id"
    />
    Name:
    <input
      required
      value="<%= price.name %>"
      type="text"
      class="form-control"
      name="name"
    />
    Description:
    <input
      required
      value="<%= price.description %>"
      type="text"
      class="form-control"
      name="description"
    />
    Price:
    <input
      required
      value="<%= price.price %>"
      type="number"
      class="form-control"
      name="price"
      min="0" 
      step="0.1"
      max="1000"
    
    /><br />
    <button type="submit" class="btn btn-primary">Save</button>
  </div>
</form>
